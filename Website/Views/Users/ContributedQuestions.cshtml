@using Website.Models.Discussions
@{
    var questions = ViewData["questions"] as IEnumerable<Question>;
}

<h1 class="h1">The questions you contributed to</h1>
<p>
    Here you cann see all the questions you contributed to.
</p>

@if (!questions.Any())
{
    <p>You have no contributions yet. Come bask after you'll have helped someone.</p>
}
else
{
    <p>You have contributed to @questions.Count() questions!</p>

    @await Html.PartialAsync("_QuestionListPartial", questions)
}

