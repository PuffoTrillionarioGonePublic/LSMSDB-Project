@model IEnumerable<string>
@{
}

@if (Model is not null && Model.Any())
{
    <span>
    @foreach (var tag in Model)
    {
        <a asp-area="" asp-controller="Tags" asp-action="Tag" asp-route-tag="@tag"
           class="btn btn-light">
            @tag
        </a>
    }
    </span>
}