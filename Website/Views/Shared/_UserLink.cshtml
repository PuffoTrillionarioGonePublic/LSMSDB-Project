@{
    var userId = Model.UserId;
    var name = Model.Name;
}

@if (User.IsInRole("Admin"))
{
    <span><a asp-area="" asp-controller="Admin" asp-action="GetUser" asp-route-userId="@userId">@name</a></span>
}
else
{
    <span>@name</span>
}
